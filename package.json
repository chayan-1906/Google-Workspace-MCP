    "google-drive",
    "google-drive-api-v3",
    "google-sheets",
    "google-sheets-api-v4",
    "google-docs",
    "google-docs-api",
    "nodejs",
    "typescript",
    "mongodb"
  ],
  "author": "Padmanabha Das",
  "license": "ISC",
